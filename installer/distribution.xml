<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>Duplicate File Updater</title>
    <organization>com.yourdomain</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />
    <!-- Define documents displayed at various steps -->
    <welcome file="welcome.txt" mime-type="text/plain" />
    <license file="license.txt" mime-type="text/plain" />
    <conclusion file="conclusion.txt" mime-type="text/plain" />
    <!-- List all component packages -->
    <pkg-ref id="com.yourdomain.duplicatefileupdater"
             version="1.0"
             auth="root">DuplicateFileUpdater.pkg</pkg-ref>
    <!-- List them again here. They can now be organized
         as a hierarchy if you want. -->
    <choices-outline>
        <line choice="com.yourdomain.duplicatefileupdater"/>
    </choices-outline>
    <!-- Define each choice above -->
    <choice
        id="com.yourdomain.duplicatefileupdater"
        visible="false"
        title="Duplicate File Updater"
        description="Duplicate File Updater application"
        start_selected="true">
      <pkg-ref id="com.yourdomain.duplicatefileupdater"/>
    </choice>
</installer-gui-script>